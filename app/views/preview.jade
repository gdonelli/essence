extends layout

block extra-script
    script(src='/javascripts/ServiceAPI.js')
    script(src='/javascripts/preview.js')
    script(src='/javascripts/spin.min.js')
    script
        $('body').ready(
            function() {
                SetupUI();
            });

block last-section
    li.dropdown
        a.dropdown-toggle.muted(data-toggle="dropdown", href="#")
            img#avatar(src=user.profile_image_url_https)
            = user.screen_name
            &nbsp;
            b.caret.muted
        ul#user-menu.dropdown-menu(role="menu", aria-labelledby="dLabel")
            li
                a(href="/") Home
            li.disabled
                a(href="/settings") Settings
            li.divider
            li
                a(href="/logout") Logout

block content
    .user-content
        #preview-box
            h1 Loading preview...
            #home-spinner

        
        