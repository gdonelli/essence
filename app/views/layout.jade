doctype 5
html(lang='en')
    head
        meta(charset='utf-8')
        title= title

        meta(name='viewport', content='width=device-width, initial-scale=1, maximum-scale=1, user-scalable=0')
        meta(name='apple-mobile-web-app-capable', content='yes')
        
        meta(name='author',         content='Giovanni Donelli')
        meta(name='description',    content='Essence App: Never miss a tweet you care about')
        meta(name='keywords',       content='essence, app, twitter, digest, email, tweets, updates, web, vip')

        meta(property='og:title',       content='Essence App')
        meta(property='og:description', content='Never miss a tweet you care about')
        meta(property='og:type',        content='company')
        meta(property='og:url',         content='http://www.essenceapp.com')
        meta(property='og:image',       content='http://www.essenceapp.com/images/star-color-512.png')
        meta(property='og:site_name',   content='Essence App')

        script(src='//ajax.googleapis.com/ajax/libs/jquery/1.8.3/jquery.min.js')
        script(src='/bootstrap/js/bootstrap.min.js')
        script(src='/javascripts/underscore.min.js')
        script(src='/javascripts/essence.js')
        script(src="/socket.io/socket.io.js")

        link(href='/bootstrap/css/bootstrap.min.css',   rel='stylesheet',   media='screen')
        link(href='/bootstrap/css/bootstrap-responsive.min.css',   rel='stylesheet',   media='screen')
        link(href='/stylesheets/style.css',             rel='stylesheet')

        block extra-script

    body.container-narrow
        .masthead

            ul.nav.nav-pills.pull-right
                block others-section
                block last-section
            
            h3.brand
                a(href='/') Essence
                    span#beta &nbsp;&beta;eta
                
            hr
        
        block content

        hr
        
        .footer.row-fluid
            .span4.center
                span Essence by 
                    a(href='http://www.twitter.com/gdonelli') @gdonelli
            .span4.center
                a.twitter-share-button(href="https://twitter.com/share", data-url="http://www.essenceapp.com", data-text="Check out Essence for Twitter", data-size="large") Tweet
                script
                    !function(d,s,id){var js,fjs=d.getElementsByTagName(s)[0];if(!d.getElementById(id)){js=d.createElement(s);js.id=id;js.src="//platform.twitter.com/widgets.js";fjs.parentNode.insertBefore(js,fjs);}}(document,"script","twitter-wjs");
            
            .span4.center
                a(href='javascript:SendEmailToFeedback()') Feedback &middot; Support

        #version.center v
            span= global.appVersion

            
        
        #disconnectModal.modal.hide.fade
            .modal-header
                h3 Oops, cannot talk to Essenceâ€¦
            .modal-body
                p We got disconnected from the Essence, you might try to reload the page
            .modal-footer
                a.btn(onClick="$('#disconnectModal').modal('hide')") Close
                a.btn.btn-primary(onClick="window.location.reload()") Reload Page
        