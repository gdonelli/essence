body
    font-family: "Helvetica Neue", Helvetica, Arial, sans-serif
    font-size: 16px
    background-color: white
    
h1
    text-align: center
    margin: 2px
       
h2
    text-align: center
    margin: 2px
    font-size: 14px
    color: #AAA
    font-weight: normal
            
.user-essence
    padding: 8px;
    margin: 8px 0;
    border-radius: 5px
    text-align: left
    
    .badge
        text-align: left
        position:   relative
        display:    inline-block
        padding:    8px 32px 8px 8px
        border-radius: 3px
        
        .name
            display: inline-block
            padding: 0
            margin:  0
            position:   relative
            margin-top: 24px
            
            font-size: 18px
            font-weight: bold
            
        .avatar
            margin: 8px
            width:  48px;
            height: 48px;
            float:  left;
            border-radius: 5px

    .tweets
        text-align: left
        
        .tweet
            margin:   6px 0px 
            border-radius: 3px
            padding: 10px
            background-color: rgba(250, 250, 250, 0.94)
            
            a
                text-decoration: none
                color: black
        
        .retweet-name
            font-weight: bold
            
        .retweet-avatar
            width:  20px
            height: 20px
            border-radius: 3px
            margin: 0 4px
            position: relative
            top:    2px


.footer
    margin: 2px
    text-align: center
    color: #888
    margin-bottom: 16px
    p
        margin: 8px;
        
        
        