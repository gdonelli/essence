body
    padding-top: 20px
    padding-bottom: 40px


/* Custom container */
.container-narrow
    margin: 0 auto
    max-width: 700px

.container-narrow > hr
    margin: 30px 0


/* Main marketing message and sign up button */
.jumbotron
    margin: 60px 0
    text-align: center

.jumbotron h1
    font-size: 72px
    line-height: 1


#jumbo-signup-button
    position: relative;
    font-size: 21px
    padding: 14px 24px

    &:focus
        outline: 0;

    #signup-spinner
        &:focus
            outline: 0;
        position: absolute;
        margin-left: 50%;
        margin-top: 50%;

        top: 0px;
        left: 0px;

/* Supporting marketing content */
.marketing
    margin: 60px 0

.marketing p + h4
    margin-top: 28px

#white-bird
    margin-right: 8px
    margin-top: -4px
   
    width: 32px
    height: 27px
    
#user-menu
    min-width: 100%
    
#avatar
    // display: none
    width: 22px
    height: 22px

    margin-top: -20px
    margin-bottom: -20px
    margin-right: 8px

    padding: 0

#beta
    position: relative
    font-size: 9px;
    top: 2px;


#friends-table
    position: relative

    padding 1px

    display: inline-block
    border-radius: 8px
    background-color: #fbfbfb
    width: 300px

    #friends-table-header
        position: relative;
        padding-top: 8px
        padding-bottom: 16px
        height: 40px;
        // background-color: orange;

        headerTabItem()
            position: absolute;
            display: none;
            width: 200px
            left: -100px;
            top: 0px;
            margin-left: 50%;

        #search-header
            headerTabItem()
            top: 16px
            width: 260px
            left: -130px
            span
                position: relative
                top: 1px
            input
                margin-left: 16px
                width: 150px

        #loading-header
            headerTabItem()
            top: 8px
            // background-color: yellow;

            #friends-progress
                margin-top: 8px
                height: 8px
                .bar
                    width: 0

        #error-header
            headerTabItem()
            display: none;
            top: 8px

        ._label
            margin-top: 2px

    ._rows
        margin:0
        padding:0

        :nth-child(even)
            background-color: white;

        overflow-x: hidden;
        overflow-y: auto;
        height: 200px

    ._row
        position: relative

        height: 48px
        text-align: center;

        img
            position: absolute
            top: 8px;
            left: 8px;
            width: 32px;
            height: 32px;
            border-radius: 4px

        .user-name
            background-color: transparent;
            position: absolute
            top: -4px;
            left: 48px;

        .user-screenname
            background-color: transparent;
            position: absolute
            font-size: 11px;
            top: 20px;
            left: 48px;

        button
            position: absolute
            top:   12px;
            right: 16px;



