body
    padding-top: 20px
    padding-left: 20px
    padding-right: 20px

.brand
    color: #999
    a
        color: #999
        &:hover 
            text-decoration: none
            color: #AAA

#shield
    position: fixed
    width: 100%
    height: 100%
    top: 0
    left: 0
    background-color: rgba(200, 200, 200, 0.80)


#video-player
    display: none
    iframe
        margin-bottom: 24px


/* === user-index === */

#home-dashboard
    visibility: hidden
    padding-bottom: 16px
    p
        text-align: center
    
.dialog-btn
    margin: 16px;
    // background-color: red

#deactivate
    display: block
    font-size: 12px

#home-spinner
    position: relative
    margin-left: 50%
    top: 64px
    
#home-controls
    text-align: center
    // background-color: yellow
    padding-top: 16px
    #settings
        margin-left: 16px
    

/* Custom container */
.container-narrow
    margin: 0 auto
    max-width: 700px

.container-narrow > hr
    margin: 30px 0

/* === Preview === */

#preview-box
    min-height: 250px
    
/* Index */

#login-failed
    overflow: hidden
    margin: 32px
    max-height: 200px
    p
        text-align: left

.close-bg
    background-color: rgb(250, 250, 250)
    color: rgb(220, 220, 220)
    text-shadow: 0 1px 0 white


.fun-bg
    background-image: url('/images/video-container.jpg')
    background-repeat:no-repeat
    background-position:center
    color: black
    text-shadow: 0 1px 0 white

#video-link
    background-size: 100%
    border: 1px solid rgba(0, 0, 0, 0.2)
    border-radius: 6px
    padding-top: 28px;
    padding-bottom: 28px;
    img
        width: 40px
        height: 40px
        margin: 0
        margin-right: 16px
    span
        position: relative
        top: 1px

#how-index
    text-align: left

#star
    width: 160px
    height: 160px
    margin-bottom: 16px

.jumbotron
    margin: 60px 0
    margin-top: 0px
    
    text-align: center

#title-container
    text-align: center
    
.jumbotron h1
    font-size: 48px
    line-height: 1
    max-width: 500px
    // background-color: red
    display: inline-block
    
.user-content
    h1
        margin: 40px 0 40px 0
        text-align: center

    .user-section
        margin: 40px 0 40px 0
        overflow: auto;
        width: 100%


#jumbo-signup-button
    position: relative
    font-size: 21px
    padding: 14px 24px
    margin: 24px 0
    margin-bottom: 32px

    &:focus
        outline: 0;

    #signup-spinner
        &:focus
            outline: 0
        position: absolute
        margin-left: 50%

        top: 26px
        left: 0px

/* Supporting marketing content */
.marketing
    margin: 60px 0

.marketing p + h4
    margin-top: 28px

#white-bird
    margin-right: 8px
    margin-top: -4px
   
    width: 32px
    height: 27px
    
#user-menu
    min-width: 100%
    
#avatar
    width: 22px
    height: 22px

    margin-top: -20px
    margin-bottom: -20px
    margin-right: 8px

    padding: 0
    border-radius: 2px
    

#beta
    position: relative
    font-size: 9px
    top: 2px


#too-many
    display: none

.peopleTable
    position: relative
    padding 1px
    display: inline-block
    border-radius: 4px
    background-color: #fbfbfb
    // width: 100px
    border: 1px solid #DDD
    margin: 8px 0   

.peopleTableHeader
    position: relative
    padding-top: 8px
    padding-bottom: 16px
    height: 40px;
    border-bottom: 1px solid #DDD

tableHeaderItem()
    position: absolute
    display: none
    width: 200px
    left: -100px
    top: 0px
    margin-left: 50%
    text-align: center

.peopleTableRows
    margin:0
    padding:0

    :nth-child(even)
        background-color: white

    overflow-x: hidden
    overflow-y: auto
    height: 216px
    // background-color: yellow

._row
    position: relative

    height: 48px
    text-align: center

    img
        position: absolute
        top: 8px;
        left: 8px;
        width: 32px;
        height: 32px;
        border-radius: 4px

    .user-name
        background-color: transparent
        position: absolute
        top: -4px;
        left: 48px;

    .user-screenname
        background-color: transparent
        position: absolute
        font-size: 11px;
        top: 20px;
        left: 48px;

    button
        position: absolute
        top:   12px;
        right: 16px;


#friends-table
    #friends-table-header
        #search-header
            tableHeaderItem()
            top: 16px
            width: 260px
            left: -130px
            span
                position: relative
                top: 1px
            input
                margin-left: 16px
                width: 150px

        #loading-header
            tableHeaderItem()
            top: 8px

            #friends-progress
                margin-top: 8px
                height: 8px
                .bar
                    width: 0

        #error-header
            tableHeaderItem()
            display: none;
            top: 8px

        ._label
            margin-top: 2px


#vip-table
    .peopleTableHeader
        h4
            margin: 12px 0 0 0
            text-align: center

    .peopleTableRows
        #vip-placeholder
            position: relative;

            // background-color: red
            text-align: center
            margin-top: 10px
            margin-left: 50%
            left: -75px
            width: 150px
            height: 150px

#your-email
    padding-top: 2px
    padding-bottom: 2px

    input
        margin: 0
        margin-left: 4px
        width: 65%
        max-width: 220px
        
    button
        margin-left: 8px

#confirm-alert
    display: none
    
    margin: 24px 0

#email-check
    margin: 0
    margin-left: 6px
    padding: 0
    visibility: hidden

#settings-endpage
    text-align: center
    a
        margin: 0 16px
        
#version
    color: white
    
#images-spinner-gif
    width:  16px
    height: 16px
    border: 0
    padding:0
    margin: 0
    margin-top: -4px
    
.center
    text-align: center


#feedback
    text-align: center
    
    #vote
        margin-bottom: 32px
        .btn
            margin: 0
            margin-left: 16px
            margin-right: 16px
            width: 64px
    
    #vote-input
        display: none
        
    #vote-comment
        display: inline-block
        visibility: hidden
        text-align: left
        width: 280px
        
        textarea
            width: 100%
            
